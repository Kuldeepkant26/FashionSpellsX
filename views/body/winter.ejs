<% layout('../layouts/boilerplate') %>

    <body>
        <%- include("../includes/ctgry.ejs") %>
            <div class="cards">
                <% for(listing of listings){ %>
                    <% if(listing.occasion=="winter"){ %>
                        <a href="/show/<%= listing._id %>">
                            <div class="card">
                                <img src="<%= listing.image.url%>" alt="Product Image">
                                <div class="card-info">
                                    <h2 class="card-title">
                                        <%= listing.title %>
                                    </h2>
                                    <p class="card-price">
                                        &#8377;<%= listing.price.toLocaleString('en-IN') %>
                                    </p>
                                </div>
                            </div>
                        </a>
                        <% } %>
                            <% } %>
            </div>

    </body>